// Another example (see sample.gr)
// Variant with accumulation of result down the stack

a = [ 1, 3, 5, 7]

apply = func(f, a) {
    // helper function
    h = func(f, a, result) {
        if (len(a) == 0) {
            return result
        }
        return h(f, rest(a), result + f(first(a)))
    }
    h(f, a, [])
}

apply(func(x) { 2 * x }, a)

// ^^^ [2, 6, 10, 14]
